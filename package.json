{
  "name": "dotnet-project-creator",
  "displayName": ".NET Project Creator",
  "description": "Visual .NET project creation with templates and configuration",
  "version": "1.0.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Debuggers"
  ],
  "keywords": [
    "dotnet",
    "csharp",
    "project",
    "template",
    "scaffolding"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "dotnetCreator.createProject",
        "title": "Create .NET Project",
        "icon": "$(add)"
      },
      {
        "command": "dotnetCreator.refreshTree",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "dotnetCreator.openTemplate",
        "title": "Configure Project"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "dotnetProjectCreator",
          "name": ".NET Project Creator"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "dotnetCreator.createProject",
          "when": "view == dotnetProjectCreator",
          "group": "navigation"
        },
        {
          "command": "dotnetCreator.refreshTree",
          "when": "view == dotnetProjectCreator",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "dotnetCreator.openTemplate",
          "when": "view == dotnetProjectCreator && viewItem == projectTemplate"
        }
      ]
    },
    "configuration": {
      "title": ".NET Project Creator",
      "properties": {
        "dotnetCreator.defaultProjectPath": {
          "type": "string",
          "default": "",
          "description": "Default path for new projects"
        },
        "dotnetCreator.gitAutoInit": {
          "type": "boolean",
          "default": true,
          "description": "Automatically initialize Git repository"
        },
        "dotnetCreator.openAfterCreate": {
          "type": "boolean",
          "default": true,
          "description": "Open project in new VS Code window after creation"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4",
    "@vscode/test-electron": "^2.2.0",
    "vsce": "^2.15.0"
  }
}
